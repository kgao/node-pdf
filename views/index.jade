extends layout
 
block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Welcome to the experiment !
          div.account-wall
            img(class='profile-img', src='data:image/png;base64,')
            form(class='form-signin', action='/login', method='POST')
              input(type='text', name='username' class='form-control', placeholder='User Name',required, autofocus)
              input(type='password', name='password' class='form-control', placeholder='Password', required)
              button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
              span.clearfix
          a(href='/signup', class='text-center new-account') Create an account
          #message
          if message
            h1.text-center.error-message #{message}
  div(class='footer')
    img(src='https://upload.wikimedia.org/wikipedia/en/archive/b/b3/20110309193628%21Microsoft_Research_logo.jpg')